@{
	@model SpotifyFake.ViewModels.IndexViewModel
}
<html style="background-color: black;">
<head>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/bocelli.css" asp-append-version="true" />
</head>
<body>
	<header class="top_menu" >
		<button type="button" class="home_button">
			<a href="http://localhost:5101/home/HomeViewRightMenu" target="iframe_home" style="opacity:0;font-size:200%">
				OI
			</a>
		</button>
		<div class="topnav">
			<input type="text" placeholder="Search.." >
		</div>
	</header>
	<div class="right_menu">
		<iframe src="http://localhost:5101/Home/HomeViewRightMenu" style="border:none" height="100%" width="100%" name="iframe_home">

		</iframe>
	</div>
	<div class="left_menu" >

		<div style="height:50px">
			<h2 style="color:white; font-family:'Copperplate Gothic'; position:absolute; left:70px">
				PLAYLIST   
			</h2>
			<h2 style="color:white;font-size:50px; position:absolute; left: 300px; top: -43px">
				<a href="http://localhost:5101/home/PopUpAddPlaylist" target="iframe_home" style="text-decoration:none; color:white">
					+
				</a>
			</h2>
		</div>
		<hr style="border: 3px solid dimgrey">
		<table>
			@foreach (Playlists playlists in Model.Playlists)
			{
				<tr style="border-bottom:solid 2px grey">
					<td style="width:25% ">
						<a class="delete" href="~/@Model.DeletePlaylistCommandLink(playlists.playlistId)">
							X
						</a>
					</td>
					<td style ="width:75%">
						<div class="display_left">
								<h2 class="playlist_list">
									<a href="http://localhost:5101/home/PlaylistDetails?playlistId=@playlists.playlistId" target="iframe_home" style="text-decoration:none; color:white">
										@playlists.name
									</a>
								</h2>
						</div>
					</td>
				</tr>
			}
		</table>
	</div>
	</body>
</html>